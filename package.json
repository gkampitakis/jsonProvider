{
  "name": "jsonprovider",
  "version": "2.0.0",
  "description": "Simple Server for storing and serving json files",
  "main": "index.js",
  "scripts": {
    "test": "rimraf dist coverage && npm run eslint && jest",
    "dev": "ts-node-dev --respawn --transpileOnly ./src/index.ts",
    "prod": "tsc && NODE_ENV=production node ./build/index.js",
    "start": "NODE_ENV=production node ./build/index.js",
    "eslint": "eslint \"**/*.ts\"",
    "build": "rimraf ./build && tsc"
  },
  "author": "George Kampitakis",
  "license": "ISC",
  "dependencies": {
    "@gkampitakis/email-provider": "^1.1.0",
    "@gkampitakis/tslog": "^1.1.0",
    "async": "^3.1.1",
    "auto-bind": "^4.0.0",
    "bluebird": "^3.7.2",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "lodash": "^4.17.15",
    "method-override": "^3.0.0",
    "moment": "^2.24.0",
    "mongoose": "^5.8.9",
    "parse-bearer-token": "^1.0.1",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^8.6.2",
    "typedi": "^0.8.0",
    "typescript": "^3.7.5",
    "unique-names-generator": "^4.1.1",
    "validator": "^12.2.0"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^1.1.3",
    "@types/async": "^3.0.5",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.2",
    "@types/jest": "^24.9.1",
    "@types/lodash": "^4.14.149",
    "@types/moment": "^2.13.0",
    "@types/mongoose": "^5.5.43",
    "@types/node": "^13.5.0",
    "@types/validator": "^12.0.1",
    "@typescript-eslint/eslint-plugin": "^2.17.0",
    "@typescript-eslint/parser": "^2.17.0",
    "axios": "^0.19.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.20.0",
    "husky": "^4.2.1",
    "jest": "^25.1.0",
    "jest-sonar-reporter": "^2.0.0",
    "rimraf": "^3.0.0",
    "ts-jest": "^25.0.0",
    "ts-node-dev": "^1.0.0-pre.44"
  },
  "jest": {
    "preset": "@shelf/jest-mongodb",
    "verbose": true,
    "collectCoverage": false,
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "testResultsProcessor": "jest-sonar-reporter",
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/config.{ts,tsx}",
      "!src/**/theme.{ts,tsx}",
      "!src/**/index.{ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/data/"
    ]
  },
  "jestSonar": {
    "reportPath": "coverage",
    "reportFile": "test-report.xml",
    "indent": 4
  },
  "mongodbMemoryServerOptions": {
    "instance": {
      "dbName": "jest"
    },
    "binary": {
      "version": "4.0.3",
      "skipMD5": true
    },
    "autoStart": false
  }
}
